<div class="index-post-card">
  <div class="index-post-profile">
    <%= render 'profile/profile_image', user:post.user, size: "80" %>
    <p class="index-post-profile-display-name" >
      <%= link_to post.user.profile&.display_name || post.user.email, user_path(post.user), class:"user-profile-link" %>
    </p>
  </div>
  <div class="index-post-image">
    <% if post.image.attached? && post.image.blob.present?%>
      <%= image_tag(post.image, alt: post.id, class: "post-image-tag") %>
    <%end%>
  </div>
  <p><%= post.content %></p>
  <%= render 'posts/post_like', post: post %>
  <%= render 'comments/index', post: post %>
  <div class="post-delete-wrapper">
    <% if post.user == current_user %>
      <%= button_to "Delete Post", post_path(post), method: :delete %>
    <% end %>
  </div>
</div>