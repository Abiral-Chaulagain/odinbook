<% if user.profile&.avatar&.attached? && user.profile.avatar.blob.present? %>
  <%= link_to image_tag(user.profile.avatar, alt: user.id, class: "post-avatar", size: size), user_path(user) %>
<% else %>
  <%= link_to image_tag("default_avatar.png", alt: user.id, class: "post-avatar", size: size), user_path(user)  %>
<% end %>